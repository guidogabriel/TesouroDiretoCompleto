<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nome_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:textColor="@color/colorPrimarytext"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_preco_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_nome_titulo"
        android:layout_below="@+id/tv_nome_titulo"
        android:textColor="@color/colorSecondtext"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_taxa_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_nome_titulo"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorSecondtext"
        android:textSize="12sp" />

    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_alignLeft="@+id/tv_preco_compra"
        android:layout_below="@+id/tv_preco_compra"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary" />
</RelativeLayout>
