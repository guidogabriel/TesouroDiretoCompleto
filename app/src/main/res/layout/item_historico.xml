<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <RelativeLayout
        android:id="@+id/rl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="11/11/2123 09:00:00"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:background="@color/colorDivider"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_label_preco_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rl_data"
        android:layout_below="@+id/rl_data"
        android:text="Preço compra: "
        android:textColor="@color/colorSecondtext"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_preco_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_label_preco_compra"
        android:layout_below="@+id/rl_data"
        android:layout_toRightOf="@id/tv_label_preco_compra"
        android:paddingTop="1dp"
        android:textColor="@color/colorSecondtext"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_label_preco_venda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_label_preco_compra"
        android:layout_below="@+id/tv_label_preco_compra"
        android:text="Preço venda: "
        android:textColor="@color/colorSecondtext"
        android:textSize="12sp"
         />

    <TextView
        android:id="@+id/tv_preco_venda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_preco_compra"
        android:layout_alignTop="@+id/tv_label_preco_venda"
        android:layout_below="@+id/tv_preco_compra"
        android:paddingTop="1dp"
        android:textColor="@color/colorSecondtext"
        android:textSize="12sp"
         />

    <TextView
        android:id="@+id/tv_label_taxa_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_data"
        android:layout_toLeftOf="@+id/tv_taxa_compra"
        android:text="Tx compra: "
        android:textColor="@color/colorSecondtext"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_taxa_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_label_taxa_compra"
        android:layout_below="@+id/rl_data"
        android:layout_marginRight="16dp"
        android:paddingTop="1dp"
        android:textColor="@color/colorSecondtext"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_label_taxa_venda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_label_taxa_compra"
        android:layout_below="@+id/tv_taxa_compra"
        android:text="Tx venda: "
        android:textColor="@color/colorSecondtext"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_taxa_venda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_taxa_compra"
        android:layout_alignTop="@+id/tv_label_taxa_venda"
        android:layout_below="@+id/tv_taxa_compra"
        android:paddingTop="1dp"
        android:textColor="@color/colorSecondtext"
        android:textSize="12sp"
        />

    <!--View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_alignLeft="@+id/tv_label_preco_compra"
        android:layout_below="@+id/tv_label_preco_venda"
        android:layout_marginTop="20dp"
        android:background="@color/colorDivider" /-->
</RelativeLayout>
